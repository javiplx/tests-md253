#!/bin/sh

. /usr/libexec/modules/modules.conf

#patch samba
/bin/cp -af /usr/local/samba/sbin/audit.so /etc/smb/vfs
/bin/cp -af /usr/local/samba/sbin/recycle.so /etc/smb/vfs

mount | grep -q ' on /home type xfs ' && \
 service_smb_modify_conf

route add -net 224.0.0.0 netmask 240.0.0.0 dev eth0

service_crond_start &
service_http_start &

service_ssh_start &

service_package_manager "Service&default"

service_start

service_optware_start &
